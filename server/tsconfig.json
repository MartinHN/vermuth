{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "moduleResolution": "node",
    "esModuleInterop":true,
    "allowJs":true,
    "baseUrl":"./src",
    "paths": {
      "@/*": ["./*"],
      "@API/*": ["../../API/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "../API/**/*.ts",
    "../API/**/*.js",
  ],

  "exclude": [
    "node_modules",
    ".vscode"
  ]
}