{
  "name": "vermuth-server",
  "version": "1.0.0",
  "description": "light show control server",
  "main": "app.js",
  "bin": "app.js",
  "scripts": {
    "start": "node --inspect=0.0.0.0:9222 -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "webpack src/server.ts",
    "buildNrun": "NODE_ENV=production ts-node src/server.ts -P . --files",
    "run": "NODE_ENV=production node dist/server/src/server.js",
    "lint": "eslint src/**/* --fix",
    "buildApp": "node pkg.js"
  },
  "keywords": [
    "light",
    "show"
  ],
  "author": "martinHN",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.4.14",
    "bezier-easing": "^2.1.0",
    "chrome-launcher": "^0.13.1",
    "connect-history-api-fallback": "^1.6.0",
    "detect-rpi": "^1.4.0",
    "dmx": "github:martinHN/dmx#master",
    "express": "^4.17.1",
    "express-static-gzip": "^2.0.6",
    "http-proxy": "^1.18.0",
    "json-diff": "^0.5.4",
    "module-alias": "^2.2.2",
    "open": "^7.0.3",
    "osc": "^2.4.1",
    "serialport": "^8.0.7",
    "serve-index": "^1.9.1",
    "socket.io": "^2.3.0"
  },
  "optionalDependencies": {
    "pigpio": "^3",
    "localtunnel": "^2.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "../API/node_modules"
    ],
    "watch": [
      "src",
      "../API"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^12.12.37",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "follow-redirects": "^1.11.0",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "nodemon": "^2.0.3",
    "pkg": "^4.4.8",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": "^12"
  },
  "_moduleAliases": {
    "@": "dist/server/src",
    "@API": "dist/API/gen/server"
  },
  "pkg": {
    "assets": [
      "dist/server/**/*"
    ]
  }
}
