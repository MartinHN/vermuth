{
  "name": "vermuth-server",
  "version": "1.0.0",
  "description": "light show control server",
  "main": "server.ts",
  "scripts": {
    "start": "node --inspect=0.0.0.0:9222 -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "buildNrun": "NODE_ENV=production ts-node src/server.ts -P . --files",
    "run": "NODE_ENV=production node dist/server/src/server.js",
    "lint": "tslint --project . --fix"
  },
  "keywords": [
    "light",
    "show"
  ],
  "author": "martinHN",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.4.14",
    "connect-history-api-fallback": "^1.6.0",
    "detect-rpi": "^1.4.0",
    "dmx": "github:martinHN/dmx#master",
    "express": "^4.17.1",
    "http-proxy": "^1.18.0",
    "json-diff": "^0.5.4",
    "module-alias": "^2.2.2",
    "osc": "^2.4.0",
    "pigpio": "^2.0.0",
    "serialport": "^8.0.7",
    "socket.io": "^2.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "../API/node_modules"
    ],
    "watch": [
      "src",
      "../API"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.27",
    "@types/socket.io": "^2.1.4",
    "@vue/cli-service": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^1.19.4",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5",
    "vue-template-compiler": "^2.6.11"
  },
  "engines": {
    "node": ">=0.12"
  },
  "_moduleAliases": {
    "@": "dist/server/src",
    "@API": "dist/src/API"
  }
}
