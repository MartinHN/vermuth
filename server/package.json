{
  "name": "vermuth",
  "version": "1.0.0",
  "description": "light show control server",
  "main": "index.js",
  "scripts": {
    "start": "node --inspect=0.0.0.0:9222 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "keywords": [
    "light",
    "show"
  ],
  "author": "martinHN",
  "license": "ISC",
  "dependencies": {
    "connect-history-api-fallback": "^1.6.0",
    "detect-rpi": "^1.3.0",
    "dmx": "^0.2.2",
    "express": "^4.16.4",
    "http-proxy": "^1.17.0",
    "json-diff": "^0.5.4",
    "osc": "^2.3.1",
    "pigpio": "^1.2.2",
    "serialport": "^7.1.5",
    "socket.io": "^2.2.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/node": "^11.11.6",
    "@types/socket.io": "^2.1.2",
    "eslint": "^5.15.3",
    "eslint-plugin-import": "^2.16.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000"
  },
  "engines": {
    "node": ">=0.10.3 <0.12"
  }
}
