{
  "name": "vermuth",
  "version": "1.0.0",
  "description": "light show control server",
  "main": "server.ts",
  "scripts": {
    "start": "node --inspect=0.0.0.0:9222 -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "start:stop": "node --inspect-brk=0.0.0.0:9222 -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "build": "tsc",
    "buildNrun": "NODE_ENV=production ts-node src/server.ts -P . --files",
    "run": "NODE_ENV=production node dist/server/src/server.js",
    "lint": "tslint --project . --fix"
  },
  "keywords": [
    "light",
    "show"
  ],
  "author": "martinHN",
  "license": "ISC",
  "dependencies": {
    "connect-history-api-fallback": "^1.6.0",
    "detect-rpi": "^1.3.0",
    "dmx": "github:martinHN/dmx#master",
    "express": "^4.17.1",
    "http-proxy": "^1.18.0",
    "json-diff": "^0.5.4",
    "module-alias": "^2.2.2",
    "osc": "^2.3.1",
    "pigpio": "^1.3.0",
    "serialport": "^7.1.5",
    "socket.io": "^2.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "../API"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/node": "^12.11.7",
    "@types/socket.io": "^2.1.4",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">=0.12"
  },
  "_moduleAliases": {
    "@": "dist/server/src",
    "@API": "dist/API"
  }
}
