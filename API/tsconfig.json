{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
    ],
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "declaration":true,
    "declarationDir":"dist/@types",
    "esModuleInterop":true,
    "strict":true,
    "noImplicitAny":false,
    "allowJs":true,
  },
  "include": [
    "src/*.ts",
    "src/*.js"
  ],

  "exclude": [
    "node_modules",
    ".vscode"
  ]
}